<Page
    x:Class="SayHello.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SayHello"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <AcrylicBrush x:Key="AcrylicBrush in about"
                      BackgroundSource="HostBackdrop"
                      TintOpacity="0" 
                      TintColor="White"
                      TintTransitionDuration="1"
                      FallbackColor="White"/>
    </Page.Resources>
    <Grid Background="{StaticResource AcrylicBrush in about}">
        <Image x:ConnectionId='2' x:Name="ab_ba" 
               HorizontalAlignment="Center" 
               Height="200" 
               Margin="0,179,0,0" 
               VerticalAlignment="Top" 
               Width="200" 
               Stretch="Fill" 
               Source="/Assets/1.png" NineGrid="2,2,2,2"                                             
               />
        <TextBox x:ConnectionId='3' x:Name="About1" 
                 HorizontalAlignment="Left" 
                 Height="62" 
                 Margin="538,410,0,0" 
                 Text="SayHello的作者是曾万友，" 
                 VerticalAlignment="Top" 
                 Width="504" 
                 IsReadOnly="True" 
                 FontSize="36" 
                 BorderThickness="1,1,8,0" 
                 TextAlignment="Center"
                 />
        <TextBox HorizontalAlignment="Left" 
                 Height="60" 
                 Margin="538,472,0,0" 
                 Text="你可以用电子邮件地址" 
                 VerticalAlignment="Top" 
                 Width="504" 
                 IsReadOnly="True" 
                 FontSize="36"
                 BorderThickness="1,1,8,0" 
                 TextAlignment="Center"
                 />
        <TextBox 
            HorizontalAlignment="Left" 
            Height="63" 
            Margin="538,531,0,0" 
            Text="stevemc123456@outlook.com" 
            VerticalAlignment="Top" 
            Width="504" 
            FontSize="36" 
            IsReadOnly="True" 
            InputScope="EmailSmtpAddress" 
            BorderThickness="1,1,8,0"
            />
        <TextBox HorizontalAlignment="Left" 
                 Height="62" 
                 Margin="538,593,0,0" 
                 Text="来联系我。" 
                 VerticalAlignment="Top" 
                 Width="504" 
                 FontSize="36" 
                 IsReadOnly="True" 
                 BorderThickness="1,1,8,8" TextAlignment="Center"
                 />
        <TextBox HorizontalAlignment="Left" 
                 Height="67" 
                 Margin="496,680,0,0" 
                 Text="©Live Media Library,保留所有权利" 
                 VerticalAlignment="Top" 
                 Width="587" 
                 IsReadOnly="True"
                 FontSize="36" 
                 BorderThickness="1,1,8,8" TextAlignment="Center"
                 />
        <TextBlock HorizontalAlignment="Left" 
                   Height="40" 
                   Margin="695,752,0,0" 
                   Text="版本:2.0.0.0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Width="190" 
                   FontSize="22" 
                   TextAlignment="Center" 
                   FontFamily="Segoe UI"
                   />
        <TextBox HorizontalAlignment="Center" 
                 Height="70" 
                 Margin="0,88,0,0" 
                 Text="关于" 
                 VerticalAlignment="Top" 
                 Width="218" 
                 BorderThickness="2,2,8,11" 
                 TextAlignment="Center" 
                 FontFamily="Segoe UI" 
                 FontSize="36" 
                 IsReadOnly="True"
                 />
    </Grid>
</Page>

